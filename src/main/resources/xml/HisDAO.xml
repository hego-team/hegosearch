<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.bytedance.hego.dao.HisDAO">
    <select id="findAll" resultType="com.bytedance.hego.entity.His">
        SELECT  id,owner,content,times from his where owner=#{owner}
    </select>

    <select id="findById" resultType="com.bytedance.hego.entity.His">
        SELECT id,owner,content,times
        FROM his
        WHERE id = #{id}
    </select>

    <select id="findByContent" resultType="com.bytedance.hego.entity.His">
        SELECT id, owner,content,times
        FROM his
        WHERE content=#{content} AND owner=#{owner}
    </select>

    <delete id="deleteById">
        DELETE FROM his
        WHERE id = #{id}
    </delete>


    <insert id="insert" parameterType="com.bytedance.hego.entity.His">
        <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
            SELECT LAST_INSERT_ID()
        </selectKey>
        INSERT INTO his
        <trim prefix="(" suffixOverrides="," suffix=")">
            <if test="owner != null">owner, </if>
            <if test="content != null">content, </if>
            <if test="times != null">times </if>
        </trim>

        <trim prefix="VALUES (" suffixOverrides="," suffix=")">
            <if test="owner != null">#{owner}, </if>
            <if test="content != null">#{content}, </if>
            <if test="times != null">#{times} </if>
        </trim>
    </insert>

    <update id="update" parameterType="com.bytedance.hego.entity.His">
        UPDATE his
        <set>
            <if test="content != null">content = #{content}, </if>
            <if test="owner != null">owner = #{owner}, </if>
            <if test="times != null">times = #{times} </if>

        </set>
        WHERE id = #{id}
    </update>
</mapper>